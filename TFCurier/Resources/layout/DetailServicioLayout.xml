<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/pedidocliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"/>
    <ListView
        android:id="@+id/listpedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/efectivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/dinero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/pedidorecolectado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recolectado"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/navegacionbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navegacion"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/finalizarpedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finalizarservicio"
        android:textSize="20sp"/>
    
</LinearLayout>
