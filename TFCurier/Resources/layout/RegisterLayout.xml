<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/pfr"
		android:textColor="@android:color/white"
		android:gravity="center_horizontal"
		android:textSize="40sp"
        />

	<EditText
		android:id="@+id/curiername"
		android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/curiername"
		android:textAlignment="center"/>

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_columnWeight="1"
			android:text="@string/ciudad"/>
		<Spinner
			android:id="@+id/cityspn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_columnWeight="7"
           />
	</GridLayout>
	<EditText
		android:id="@+id/emailcurier"
		android:inputType="textEmailAddress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/email"
		android:textAlignment="center"
         />

	<EditText
		android:id="@+id/cotraseñacurier"
		android:inputType="textPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/contra"
		android:textAlignment="center"
         />

	<EditText
		android:id="@+id/celcurier"
		android:inputType="phone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/celular"
		android:textAlignment="center"
        />

	<EditText
		android:id="@+id/vehiculocurier"
		android:inputType="text"
		android:numeric="integer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/vehiculo"
		android:textAlignment="center"
        />

	<EditText
		android:id="@+id/descripcionvehiculocurier"
		android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/descripcionvehiculo"
		android:textAlignment="center"
        />

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:orientation="horizontal"
  >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_columnWeight="1"
			android:text="@string/Banco"
			android:gravity="center"/>


		<Spinner
			android:id="@+id/bancospn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_columnWeight="10"/>


	</GridLayout>

	<EditText
		android:id="@+id/cuentabancocurier"
		android:inputType="phone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:hint="@string/cuentadeposito"
		android:textAlignment="center"
        />

	<Button
		android:id="@+id/nextbtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/next"
         />
</LinearLayout>
